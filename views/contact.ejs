<%- include("partials/header"); -%>

<script>
  $(".option1").removeClass("active");
  $(".option3").addClass("active");
</script>

<div class="row marginLine tabsNav contactSpace">
  <div class="col">
  <p style="font-size: 18px;"><strong>Write to us</strong></p>
  <form role="form" action="/send-email" method="post">
    <br style="clear:both">
    <div class="form-group">
      <% if(sentConfirmation.length > 0){ %>
        <% if (emailContent.category=="Feedback"){ %>
          <select name="category" class="form-control category"><option value="Feedback" selected>Feedback</option><option value="bug">Report a bug</option></select>
        <% }else{ %>
          <select name="category" class="form-control category"><option value="Feedback">Feedback</option><option value="bug" selected>Report a bug</option></select>
        <% } %>
      <% }else{ %>
        <select name="category" class="form-control category"><option value="Feedback" selected>Feedback</option><option value="bug">Report a bug</option></select>
      <% } %>
    </div>
    <div class="form-group">
      <% if(sentConfirmation.length > 0){ %>
        <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" value="<%= emailContent.subject %>" required>
      <% }else{ %>
        <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
      <% } %>
    </div>
    <div class="form-group">
      <% if(sentConfirmation.length > 0){ %>
        <input type="email" class="form-control" id="from" name="from" placeholder="Your Email Address" value="<%= emailContent.from %>" required>
      <% }else{ %>
        <input type="email" class="form-control" id="from" name="from" placeholder="Your Email Address" required>
      <% } %>
    </div>
    <div class="form-group">
      <% if(sentConfirmation.length > 0){ %>
        <textarea class="form-control" type="textarea" id="message" name="message" placeholder="Message" maxlength="140" rows="7" required><%= emailContent.msg %></textarea>
      <% }else{ %>
        <textarea class="form-control" type="textarea" id="message" name="message" placeholder="Message" maxlength="140" rows="7" required></textarea>
      <% } %>
    </div>
    <div class="text-center">
      <button type="submit" id="submit" name="submit" class="btn btn-primary pull-right btn-submit btn-lg">Send</button>
    </div>
  </form>
  <br>
  <% if (sentConfirmation == "Yes"){ %>
    <div style="text-align: center; color: green;"><p style="font-size: 18px;"><strong>Email Sent</strong></p></div>
  <% }else if (sentConfirmation == "No"){ %>
    <div style="text-align: center;"><p style="font-size: 18px;"><strong>Failure Encountered! Please try again.</strong></p></div>
  <% } %>
  </div>
</div>

<!-- <p> <%= sentConfirmation %> </p> -->

<%- include("partials/footer"); -%>
